# http://editorconfig.org/

root = true

[*]
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.yml]
indent_size = 2
charset = utf-8

[*.{java,scala,xml}]
charset = utf-8

[*.md]
# Preserve trailing whitespace for Markdown files
trim_trailing_whitespace = false

